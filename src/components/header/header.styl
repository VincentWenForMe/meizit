.header
  .fixed-top
    display flex
    position fixed
    left 0
    top 0
    z-index 2
    width 100%
    background #03a9f4
    box-shadow 0 1px 0 rgba(0, 0, 0, .1), 0 1px 2px rgba(0, 0, 0, .1);
    transition all .3s ease;
    color #ffffff
    line-height 50px
    text-align center
    span
      padding 0 15px
      font-size 20px
      &:nth-child(2)
        flex 1
        padding 0
        text-transform uppercase
